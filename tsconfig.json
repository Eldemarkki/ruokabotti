{
  "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "rootDir": "./src/",
      "outDir": "./dist/",
      "strict": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true,
      "typeRoots": [
          "node_modules/@types"
      ],
      "sourceMap": false,
      "baseUrl": "./"
  },
  "include": [
      "./**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "dist"
  ],
} 